<resources>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <!-- Base application theme. -->
    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <!--<item name="android:paddingLeft">16dp</item>-->
        <!--<item name="android:paddingRight">16dp</item>-->
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.CardContent.EventDetails" parent="android:Widget">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.CardContent.EventDetails.Title" parent="Widget.CardContent.EventDetails">
        <item name="android:paddingLeft">@dimen/item_event_text_padding</item>
        <item name="android:paddingRight">@dimen/item_event_text_padding</item>
    </style>

    <style name="Widget.CardContent.EventDetails.Content" parent="Widget.CardContent.EventDetails.Title">
        <item name="android:paddingLeft">@dimen/item_event_text_padding</item>
        <item name="android:paddingRight">@dimen/item_event_text_padding</item>
        <item name="android:paddingTop">@dimen/item_event_text_padding</item>
    </style>

    <style name="MyMaterialTheme.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorHighlight">@color/text_highlight</item>
    </style>

    <style name="ThreeLineHeaderDescription">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

</resources>
