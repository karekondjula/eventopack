<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="example_checkbox"
        android:title="pref_title_social_recommendations"
        android:summary="pref_description_social_recommendations"
        android:defaultValue="true" />

    <EditTextPreference
        android:key="example_text"
        android:title="pref_title_display_name"
        android:defaultValue="pref_default_display_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <MultiSelectListPreference
        android:key="example_list"
        android:title="pref_title_add_friends_to_messages"
        android:entries="@array/pref_example_list_titles"
        android:entryValues="@array/pref_example_list_values" />

</PreferenceScreen>