<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.evento.team2.eventspack">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="com.myapp.android.locationapi.maps.permission.MAPS_RECEIVE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application xmlns:tools="http://schemas.android.com/tools"
        android:name=".EventiApplication"
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/eventi_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme"
        tools:replace="android:icon">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDlpVs0imkm5GvwRlXfYO2QshwHh_IJf_g" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".ui.activites.ActivityMain"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="ACTION_VIEW" />
            </intent-filter>
            <!-- This is required only if we have a dedicated search activity-->
            <!--<intent-filter>-->
            <!--<action android:name="android.intent.action.SEARCH" />-->
            <!--</intent-filter>-->
            <!--<meta-data-->
            <!--android:name="android.app.searchable"-->
            <!--android:resource="@xml/searchable" />-->
        </activity>

        <activity
            android:name=".ui.activites.ActivityEventDetails"
            android:parentActivityName=".ui.activites.ActivityMain"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activites.ActivityMain" />
        </activity>

        <activity
            android:name=".ui.activites.ActivityPlaceDetails"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activites.ActivityMain" />
        </activity>

        <activity
            android:name=".ui.activites.ActivityFullScreenImage"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activites.ActivityEventDetails" />
        </activity>

        <!--<activity android:name=".ui.activites.ActivitySettings"-->
        <!--android:screenOrientation="portrait">-->
        <!--<meta-data-->
        <!--android:name="android.support.PARENT_ACTIVITY"-->
        <!--android:value=".ui.activites.ActivityMain" />-->
        <!--</activity>-->

        <activity android:name=".ui.activites.ActivityCalendar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activites.ActivityMain" />
        </activity>

        <activity
            android:name=".ui.activites.ActivityMap"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.activites.ActivityMain" />
        </activity>

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <provider android:authorities="com.facebook.app.FacebookContentProvider835820619855102"
            android:name="com.facebook.FacebookContentProvider"
            android:exported="true" />

        <receiver android:name=".receivers.DownloadEventsReceiver" android:exported="false">
            <intent-filter>
                <action android:name="ActionDownloadEventsReceiver" />
            </intent-filter>
        </receiver>

        <receiver android:name=".receivers.CleanUpEventsReceiver" android:exported="false">
            <intent-filter>
                <action android:name="ActionCleanUpEventsReceiver" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
